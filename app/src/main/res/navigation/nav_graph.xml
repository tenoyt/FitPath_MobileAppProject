<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_content">

    <fragment
        android:id="@+id/Login"
        android:name="com.example.fitpath.LoginFragment"
        android:label="Login"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_Login_to_main_content"
            app:destination="@id/main_content"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_Login_to_Register"
            app:destination="@id/Register" />
    </fragment>

    <fragment
        android:id="@+id/Register"
        android:name="com.example.fitpath.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/register_fragment">
        <action
            android:id="@+id/action_Register_to_Login"
            app:destination="@id/Login" />
    </fragment>

    <navigation
        android:id="@+id/main_content"
        app:startDestination="@id/dashboard">

        <fragment
            android:id="@+id/dashboard"
            android:name="com.example.fitpath.DashboardFragment"
            android:label="Dashboard"
            tools:layout="@layout/fragment_dashboard" />

        <fragment
            android:id="@+id/settings"
            android:name="com.example.fitpath.SettingsFragment"
            android:label="Settings"
            tools:layout="@layout/fragment_settings" />

        <fragment
            android:id="@+id/workoutLibrary"
            android:name="com.example.fitpath.WorkoutLibraryFragment"
            android:label="Workout Library"
            tools:layout="@layout/fragment_workout_library">
            <action
                android:id="@+id/action_workoutLibraryFragment_to_workoutBuilderFragment"
                app:destination="@id/workoutBuilderFragment" />
        </fragment>

        <fragment
            android:id="@+id/workoutBuilderFragment"
            android:name="com.example.fitpath.WorkoutBuilderFragment"
            android:label="Build a Workout"
            tools:layout="@layout/fragment_workout_builder" />

    </navigation>

</navigation>