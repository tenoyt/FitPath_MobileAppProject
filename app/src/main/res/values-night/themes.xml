<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme for dark mode -->
    <style name="Base.Theme.FitPath" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colour for dark mode -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary colour for dark mode -->
        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/dark_accent</item>

        <!-- Status bar colour -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="colorSurface">@color/dark_card_background</item>

        <item name="colorSurfaceVariant">#3A3A3A</item>

    </style>

    <style name="Theme.FitPath" parent="Base.Theme.FitPath" />
</resources>
