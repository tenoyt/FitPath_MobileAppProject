<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for DARK mode. -->
    <style name="Base.Theme.FitPath" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color for DARK mode. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color for DARK mode. -->
        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/dark_accent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize other theme attributes for dark mode here. -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="colorSurface">@color/dark_card_background</item>

        <!-- âœ… ADD THIS LINE to fix the crash in dark mode -->
        <item name="colorSurfaceVariant">#3A3A3A</item> <!-- A muted gray for surface variants in dark theme -->

    </style>

    <style name="Theme.FitPath" parent="Base.Theme.FitPath" />
</resources>
